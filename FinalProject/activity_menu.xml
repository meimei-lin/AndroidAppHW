                app:srcCompat="@drawable/m5" />

            <TextView
                android:id="@+id/textView15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/f5"
                android:textColor="@color/teal_200"
